@page
@model DatabaseEPICORDb.Pages.ViewPages.DeleteModel
<form method="post">
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class=" text-primary pl-3">Delete Employee Data</h2>
            <hr />
        </div>
        <input hidden asp-for="@Model.Employees.Id" />
        <div class=" mb-3">
            <label asp-for="@Model.Employees.Name"></label><br />
            <input disabled asp-for="@Model.Employees.Name" />
            <span asp-validation-for="@Model.Employees.Name" class=" alert-danger"></span>
        </div>
        <div class=" mb-3">
            <label asp-for="@Model.Employees.Email"></label><br />
            <input disabled asp-for="@Model.Employees.Email" />
            <span asp-validation-for="@Model.Employees.Email" class=" alert-danger"></span>
        </div>
        <div class=" mb-3">
            <label asp-for="@Model.Employees.Designation"></label><br />
            <input disabled asp-for="@Model.Employees.Designation" />
            <span asp-validation-for="@Model.Employees.Designation" class=" alert-danger"></span>
        </div>
        <div class=" mb-3">
            <label asp-for="@Model.Employees.DepartmentId"></label><br />
            <input disabled asp-for="@Model.Employees.DepartmentId" />
            <span asp-validation-for="@Model.Employees.DepartmentId" class=" alert-danger"></span>
        </div>
        <div class=" mb-3">
            <label asp-for="@Model.Employees.ManagerId"></label><br />
            <input disabled asp-for="@Model.Employees.ManagerId" />
            <span asp-validation-for="@Model.Employees.ManagerId" class=" alert-danger"></span>
        </div>
        <button type="submit" asp-route-id="@Model.Employees.Id" class=" btn btn-primary" style="width:150px">Delete</button>
        <a asp-page="Index" class=" btn btn-primary">Back To Home</a>
    </div>
</form>