@page
@model DatabaseEPICORDb.Pages.ViewPages.EditModel
<form method="post">
    <input hidden asp-for="@Model.Employees.Id" />
    <div class="form-group">
        <label asp-for="@Model.Employees.Name"></label>
        <input asp-for="@Model.Employees.Name" class="form-control" />
        <span asp-validation-for="@Model.Employees.Name"class="alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Employees.Designation"></label>
        <input asp-for="@Model.Employees.Designation" class="form-control" />
        <span asp-validation-for="@Model.Employees.Designation" class=" alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Employees.Email"></label>
        <input asp-for="@Model.Employees.Email" class="form-control" />
        <span asp-validation-for="@Model.Employees.Email" class=" alert-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Employees.ManagerId" class="control-label"></label>
        <select asp-for="Employees.ManagerId" class="form-control" asp-items="ViewBag.ManagerId"></select>
    </div>
    <div class="form-group">
        <label asp-for="Employees.DepartmentId" class="control-label"></label>
        <select asp-for="Employees.DepartmentId" class="form-control" asp-items="ViewBag.DepartmentId"></select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}