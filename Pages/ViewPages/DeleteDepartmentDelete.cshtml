@page
@model DatabaseEPICORDb.Pages.ViewPages.DeleteDepartmentDeleteModel
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class=" border p-3 mt-4">
        <div class=" row pb-2">
            <h2 class=" text-primary pl-3">Delete Employee Data</h2>
            <hr />
        </div>
        <input hidden asp-for="@Model.Department.Id" />
        <div class=" mb-3">
            <label asp-for="@Model.Department.Name"></label><br />
            <input disabled asp-for="@Model.Department.Name" />
            <span asp-validation-for="@Model.Department.Name" class=" alert-danger"></span>
        </div>
        <div class=" mb-3">
            <label asp-for="@Model.Department.Location"></label><br />
            <input disabled asp-for="@Model.Department.Location" />
            <span asp-validation-for="@Model.Department.Location" class=" alert-danger"></span>
        </div>
        <button type="submit" asp-route-id="@Model.Department.Id" class=" btn btn-primary" style="width:150px">Delete</button>
        <a asp-page="Index" class=" btn btn-primary">Back To Home</a>
    </div>
</form>